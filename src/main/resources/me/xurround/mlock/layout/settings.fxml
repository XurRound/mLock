<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="me.xurround.mlock.controller.SettingsController"
           prefWidth="800.0"
           prefHeight="500.0"
           stylesheets="@../style/main.css"
           styleClass="background,imgBackground">

    <HBox styleClass="innerBox"
          prefWidth="500"
          prefHeight="300"
          maxWidth="500"
          maxHeight="300"
          alignment="CENTER">

        <VBox alignment="CENTER"
              prefWidth="500"
              prefHeight="300"
              styleClass="registerContent">

            <Label alignment="TOP_CENTER"
                   text="%settings"
                   style="-fx-font-size: 24;"/>

            <Label alignment="TOP_CENTER"
                   text="%settings_subheader"
                   style="-fx-font-size: 16;"/>

            <HBox styleClass="hintedField">
                <Label text="%language"/>
                <ComboBox promptText="%language"
                          prefWidth="240"
                          fx:id="languageCB"/>
            </HBox>

            <HBox spacing="10"
                  alignment="CENTER"
                  style="-fx-padding: 10 0 0 0;">
                <Button text="%apply"
                        prefWidth="150"
                        fx:id="applyBT"/>
            </HBox>

        </VBox>

    </HBox>

</StackPane>