<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="me.xurround.mlock.controller.SplashController"
           prefWidth="800.0"
           prefHeight="500.0"
           stylesheets="@../style/main.css"
           styleClass="background,imgBackground">

    <HBox styleClass="innerBox"
          prefWidth="400"
          prefHeight="200"
          maxWidth="400"
          maxHeight="200"
          alignment="CENTER">

        <VBox alignment="CENTER"
              prefWidth="400"
              prefHeight="200"
              styleClass="spaced15">

            <Label alignment="TOP_CENTER"
                   text="%welcome"
                   style="-fx-font-size: 24;"/>
            <Label text="%splash_text"
                   wrapText="true"
                   textAlignment="CENTER"/>

            <Button text="%register_profile"
                    fx:id="registerBtn"/>
        </VBox>

    </HBox>

</StackPane>